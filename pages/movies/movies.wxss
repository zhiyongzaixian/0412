/* pages/movies/movies.wxss */
.moviesContainer {
	display: flex;
	padding: 10rpx;
	border-bottom: 1rpx solid #eee;
}

.movie_img {
	width: 128rpx;
	height: 128rpx;
	margin-right: 20rpx;
}


.movie_info {
	display: flex;
	flex-direction: column;
	width: 70%;
}

.movie_name {
	font-size: 32rpx;
	color: #333;
	white-space: nowrap;
	overflow: hidden;
	text-overflow: ellipsis;
}
.movie_year {
	font-size: 28rpx;
	color: #666;
	margin: 7rpx 0;
}
.movie_director {
	font-size: 30rpx;
	color: #999;
}

.movie_rating {
	font-weight: bold;
	color: red;
}